<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Header_SA1213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Anxiety"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/Header2_SA1213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session 12-13: Re-create Real-life Scenarios/Practice"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/Header_SA1213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/b1_SA1213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Simulate more realistic social scenarios (e.g., group gatherings, public speaking, workplace, or school interactions)."
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Header2_SA1213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/b2_SA1213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Address and challenge any negative thoughts the patient had with the social interactions within the VR environment."
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/b1_SA1213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/b3_SA1213"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. (Example: public speaking)\n https://www.youtube.com/watch?v=wU0aFi5avsc"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:autoLink="web"
        android:linksClickable="true"
        app:layout_constraintTop_toBottomOf="@+id/b2_SA1213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>